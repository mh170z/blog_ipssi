{% extends "base.html.twig" %}

{% block title %}{{ title }} - Admin{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="mb-4">
            <i class="bi bi-pencil-square"></i> {{ title }}
        </h1>

        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow">
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_label(form.title) }}
                                {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Enter post title'}}) }}
                                {{ form_errors(form.title) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.category) }}
                                {{ form_widget(form.category, {'attr': {'class': 'form-select'}}) }}
                                {{ form_errors(form.category) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.picture) }}
                                {{ form_widget(form.picture, {'attr': {'class': 'form-control', 'placeholder': 'Enter image URL'}}) }}
                                {{ form_errors(form.picture) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.content) }}
                                {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': 10, 'placeholder': 'Write your article content here...'}}) }}
                                {{ form_errors(form.content) }}
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle"></i> 
                                    {% if post %}Save Changes{% else %}Create Post{% endif %}
                                </button>
                                <a href="{{ path('app_admin_post_list') }}" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-info-circle"></i> Information</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Tips for a great post:</strong></p>
                        <ul class="small">
                            <li>Write a compelling title</li>
                            <li>Add a featured image</li>
                            <li>Write clear, engaging content</li>
                            <li>Select appropriate category</li>
                            <li>Use formatting for readability</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

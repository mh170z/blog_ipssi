{% extends "base.html.twig" %}

{% block title %}{{ post.title }} - Mini Blog{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row">
            <div class="col-lg-8">
                <!-- Post Header -->
                <article>
                    {% if post.picture %}
                        <img src="{{ post.picture }}" alt="{{ post.title }}" class="img-fluid rounded mb-4" style="max-height: 500px; object-fit: cover; width: 100%;">
                    {% endif %}
                    
                    <h1 class="display-5 fw-bold mb-3">{{ post.title }}</h1>
                    
                    <div class="d-flex justify-content-between align-items-center mb-4 pb-4 border-bottom">
                        <div class="d-flex align-items-center">
                            <img src="https://ui-avatars.com/api/?name={{ post.author.firstName }}+{{ post.author.lastName }}&background=random" 
                                 alt="Author" class="rounded-circle me-3" width="50" height="50">
                            <div>
                                <h6 class="mb-0"><strong>{{ post.author.firstName }} {{ post.author.lastName }}</strong></h6>
                                <small class="text-muted">
                                    <i class="bi bi-calendar-event"></i> {{ post.publishedAt.format('F d, Y') }}
                                </small>
                            </div>
                        </div>
                        <span class="badge bg-primary">{{ post.category.name }}</span>
                    </div>

                    <!-- Post Content -->
                    <div class="mb-4">
                        {{ post.content|nl2br }}
                    </div>

                    <!-- Post Footer -->
                    <div class="bg-light p-4 rounded mb-4 border-top border-bottom">
                        <p class="mb-2">
                            <strong>Published in:</strong> <span class="badge bg-info">{{ post.category.name }}</span>
                        </p>
                        <p class="mb-0">
                            <strong>By:</strong> {{ post.author.firstName }} {{ post.author.lastName }}
                        </p>
                    </div>
                </article>

                <!-- Comments Section -->
                <section class="comments-section mt-5">
                    <h3 class="mb-4">
                        <i class="bi bi-chat-dots"></i> Comments 
                        <span class="badge bg-secondary fs-6">{{ post.comments|length }}</span>
                    </h3>

                    <!-- Comments List -->
                    {% if post.comments|length > 0 %}
                        <div class="comments-list">
                            {% for comment in post.comments %}
                                {% if comment.status == 'approved' %}
                                    <div class="card mb-3">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <div>
                                                    <h6 class="card-subtitle mb-1 fw-bold">
                                                        {{ comment.author.firstName }} {{ comment.author.lastName }}
                                                    </h6>
                                                    <small class="text-muted">
                                                        <i class="bi bi-calendar"></i> {{ comment.createdAt.format('d M Y \a\t H:i') }}
                                                    </small>
                                                </div>
                                                {% if is_granted('ROLE_ADMIN') %}
                                                    <form method="POST" action="{{ path('app_comment_delete', {id: comment.id}) }}" 
                                                          style="display: inline;" 
                                                          onsubmit="return confirm('Delete this comment?');">
                                                        <button type="submit" class="btn btn-sm btn-danger">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                                {% endif %}
                                            </div>
                                            <p class="card-text mt-3">{{ comment.content }}</p>
                                        </div>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="alert alert-info mb-4" role="alert">
                            No comments yet. Be the first to comment!
                        </div>
                    {% endif %}

                    <!-- Add Comment Form -->
                    {% if app.user %}
                        <div class="card mt-4">
                            <div class="card-body">
                                <h5 class="card-title">Add a Comment</h5>
                                <form method="POST" action="{{ path('app_comment_add', {id: post.id}) }}">
                                    <div class="mb-3">
                                        <label for="comment_content" class="form-label">Your Comment</label>
                                        <textarea class="form-control" id="comment_content" name="comment_form[content]" rows="4" required></textarea>
                                    </div>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-send"></i> Post Comment
                                    </button>
                                </form>
                            </div>
                        </div>
                    {% else %}
                        <div class="alert alert-warning" role="alert">
                            <p class="mb-0">
                                <i class="bi bi-exclamation-triangle"></i>
                                <a href="{{ path('app_login') }}">Log in</a> to leave a comment.
                            </p>
                        </div>
                    {% endif %}
                </section>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Author Card -->
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <img src="https://ui-avatars.com/api/?name={{ post.author.firstName }}+{{ post.author.lastName }}&background=random&size=100" 
                             alt="Author" class="rounded-circle mb-3" width="80" height="80">
                        <h5 class="card-title">{{ post.author.firstName }} {{ post.author.lastName }}</h5>
                        <p class="text-muted small">Author</p>
                    </div>
                </div>

                <!-- Related Posts -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-link-45deg"></i> Recent Posts</h5>
                    </div>
                    <div class="list-group list-group-flush">
                        <!-- You can add related posts here -->
                        <a href="#" class="list-group-item list-group-item-action small">No other posts yet</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Back Button -->
        <div class="mt-5">
            <a href="{{ path('app_home') }}" class="btn btn-outline-primary">
                <i class="bi bi-arrow-left"></i> Back to Blog
            </a>
        </div>
    </div>
{% endblock %}

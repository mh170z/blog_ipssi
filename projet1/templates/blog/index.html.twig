{% extends "base.html.twig" %}

{% block title %}Home - Mini Blog{% endblock %}

{% block body %}
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h1 class="display-4 fw-bold">Welcome to Mini Blog</h1>
                    <p class="lead">Discover amazing stories, insights, and articles shared by our community.</p>
                </div>
                <div class="col-lg-4 text-center">
                    <i class="bi bi-book-half" style="font-size: 4rem;"></i>
                </div>
            </div>
        </div>
    </section>

    <!-- Blog Posts -->
    <div class="container">
        <div class="row">
            {% if posts|length > 0 %}
                {% for post in posts %}
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            {% if post.picture %}
                                <img src="{{ post.picture }}" class="card-img-top" alt="{{ post.title }}" style="height: 250px; object-fit: cover;">
                            {% else %}
                                <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 250px;">
                                    <i class="bi bi-image" style="font-size: 3rem;"></i>
                                </div>
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">{{ post.title }}</h5>
                                <p class="card-text text-muted">{{ post.content|slice(0, 100) }}...</p>
                                <p class="card-text">
                                    <small class="text-muted">
                                        By <strong>{{ post.author.firstName }} {{ post.author.lastName }}</strong><br>
                                        <i class="bi bi-folder"></i> {{ post.category.name }}<br>
                                        <i class="bi bi-calendar"></i> {{ post.publishedAt.format('d M, Y') }}
                                    </small>
                                </p>
                            </div>
                            <div class="card-footer bg-transparent">
                                <a href="{{ path('app_post_detail', {id: post.id}) }}" class="btn btn-primary btn-sm w-100">
                                    Read More <i class="bi bi-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info text-center" role="alert">
                        <i class="bi bi-info-circle"></i> No posts available yet. Check back soon!
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
